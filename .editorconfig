root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{rs,c,h,cpp,hpp}]
indent_style = space
indent_size = 4

[*.{js,ts,jsx,tsx,html,css}]
indent_style = space
indent_size = 2 # Cringe, but prettier uses 2 by default as far as I know

[*.{yml,yaml,toml,json}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[Cargo.lock]
indent_style = space
indent_size = 2
